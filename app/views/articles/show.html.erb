<p>
    <strong>Title:</strong>
    <%= @article.title %>
</p>

<p>
    <strong>Text:</strong>
    <%= @article.content %>
</p>

<%= form_with url: article_comments_path(@article) do |form| %>
    <%= form.label :email %>
    <%= form.text_field :email %>
    <%= form.label :comment %>
    <%= form.text_field :comment %>
    <%= form.submit 'Add comment' %>
<% end %>